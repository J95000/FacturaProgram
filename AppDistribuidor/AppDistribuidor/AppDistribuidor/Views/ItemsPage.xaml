<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppDistribuidor.Views.ItemsPage"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:AppDistribuidor.ViewModels"
             xmlns:model="clr-namespace:AppDistribuidor.Models"
             x:DataType="local:ItemsViewModel"
             x:Name="BrowseItemsPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Borrar Todo"
                     Command="{Binding BorrarTodoCommand}" />
    </ContentPage.ToolbarItems>
    <!--
      x:DataType enables compiled bindings for better performance and compile time validation of binding expressions.
      https://docs.microsoft.com/xamarin/xamarin-forms/app-fundamentals/data-binding/compiled-bindings
    -->

  
    
    <Grid BackgroundColor="#1465bb"
          Padding="9">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>
        <ScrollView>
            <!--  CLIENTES INICIO-->
            <StackLayout Grid.Row="0" HeightRequest="200">
                <Label Text="Cliente"
                   FontAttributes="Bold"
                   FontSize="Micro"
                   TextColor="White" />
                <SearchBar x:Name="busca" Text="{Binding NombreCliente}"
                   Placeholder="Buscar nombre cliente"
                   TextChanged="SearchBar_TextChanged"
                          FontSize="Micro"
                       TextColor="White"
                       PlaceholderColor="Silver"  />
                <ListView x:Name="searchResults" x:DataType="local:ItemsViewModel"  ItemsSource="{Binding Clientess}"
                  IsVisible="false"   SeparatorColor="White" 
                  CachingStrategy="RecycleElement"   Margin="0,2,0,0"
                  ItemTapped="searchResults_ItemTapped">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>

                                <StackLayout HorizontalOptions="FillAndExpand"
                    Margin="0"
                    Padding="0"
                    Spacing="0"
                    VerticalOptions="Fill"  x:DataType="model:EClienteNombres">


                                    <Label 
                    BackgroundColor="#2196f3"
                        FontSize="Micro"
                        HorizontalOptions="FillAndExpand"
                        HorizontalTextAlignment="Start"
                        Margin="1" 
                                    
                        Text="{Binding NombreCompleto}" 
                        TextColor="White"  
                        VerticalOptions="FillAndExpand"
                        VerticalTextAlignment="Start"/>
                                </StackLayout>

                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </StackLayout>
            <!--  CLIENTES FIN-->
        </ScrollView>

        <!--  TITULOS DE TABLA INICIO-->
        <Frame Grid.Row="1"
               CornerRadius="0"
               OutlineColor="#1465bb"
               BackgroundColor="#2196f3"
               Padding="2">
            <FlexLayout   Direction="Column" >
                <FlexLayout FlexLayout.Grow="1">

                    <Label Text="Producto"
                       FontSize="Micro"
                       TextColor="White"  BackgroundColor="#014ba0"
                         FlexLayout.Basis="40%" />
                <Label Text="Cant."
                       FontSize="Micro"
                       TextColor="White" 
                       BackgroundColor="#0a5cb8"
                        FlexLayout.Basis="20%" />
                <Label Text="Precio"
                      FontSize="Micro"
                       BackgroundColor="#1466c3"
                       TextColor="White"
                            FlexLayout.Basis="20%"  />
                <Label Text="Borrar"
                       FontSize="Micro"
                       TextColor="White"
                          BackgroundColor="#2174d4"
                       HorizontalOptions="EndAndExpand"
                        FlexLayout.Basis="20%" />
                </FlexLayout>
            </FlexLayout>
        </Frame>
        <!--  TITULOS DE TABLA FIN-->


        <!-- LISTA DE PRODUCTOS INICIO-->
        <StackLayout Grid.Row="2">

            <RefreshView x:DataType="local:ItemsViewModel"
                     Command="{Binding LoadProductosCommand}"
                     IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
                <CollectionView x:Name="ItemsListView"
                            ItemsSource="{Binding Productos}"
                            SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <ContentView>

                                <Frame Opacity="0.7"
                                   CornerRadius="15"
                                   OutlineColor="#003785"
                                   BackgroundColor="#003785"
                                   Margin="2,5,2,5"
                                   Padding="7">
                                    <StackLayout Padding="0"
                                                 Orientation="Horizontal"
                                                 x:DataType="model:ProductoVenta">
                                        <Label Text="{Binding NombreProducto}"
                                               LineBreakMode="TailTruncation"
                                               FontSize="12"
                                               TextColor="White"
                                                 WidthRequest="150"    BackgroundColor="#014ba0"
                                     />
                                        <Label Text="{Binding Cantidad}"
                                   LineBreakMode="NoWrap"
                                               Style="{DynamicResource ListItemDetailTextStyle}"
                                               FontSize="12"
                                               TextColor="White"
                                               TranslationX="50" 
                                               BackgroundColor="#0a5cb8"/>
                                        <Label Text="{Binding Precio}"
                                               LineBreakMode="NoWrap"
                                               Style="{DynamicResource ListItemDetailTextStyle}"
                                               FontSize="12"  
                                               BackgroundColor="#1466c3"
                                               TextColor="White"
                                               TranslationX="110" />
                                        <Button x:Name="Borrar"
                                                ImageSource="https://i.ibb.co/4RTRttK/dele.png"
                                                BorderColor="Transparent"
                                                BorderWidth="1"
                                                FontAttributes="Bold"
                                                   BackgroundColor="#2174d4"
                                                BorderRadius="10"
                                                TextColor="White"
                                                HorizontalOptions="EndAndExpand"
                                                WidthRequest="30"
                                                HeightRequest="30"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type local:ItemsViewModel}}, Path=ProductoEliminar}"
                                                CommandParameter="{Binding .}" />
                                        <StackLayout.GestureRecognizers>
                                            <TapGestureRecognizer NumberOfTapsRequired="5"
                                                      Command="{Binding Source={RelativeSource AncestorType={x:Type local:ItemsViewModel}}, Path=ProductoTapped}"
                                                      CommandParameter="{Binding .}"></TapGestureRecognizer>
                                        </StackLayout.GestureRecognizers>
                                    </StackLayout>
                                </Frame>

                            </ContentView>

                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
            <Label Text="{Binding Total}"
                   LineBreakMode="NoWrap"
                   FontSize="16"
                   x:Name="TxtTotal"
                   TextColor="White"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand" />
            <Button Text="GENERAR VENTA"
                    FontAttributes="Bold"
                    BackgroundColor="#003785"
                    BorderRadius="15"
                    Clicked="Button_Clicked"
                    TextColor="White"
                    Margin="10,1,10,1"
                    WidthRequest="220"
                    HeightRequest="50"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand" />
            <Button Grid.Row="0"
                Text=""
                    ImageSource="https://i.ibb.co/rffFHtq/add2.png"
                BorderColor="#27AE61"
                BorderWidth="1"
               
                FontAttributes="Bold"
                BackgroundColor="#27AE61"
                BorderRadius="35"
                TextColor="White"
                HorizontalOptions="End"
                WidthRequest="70"
                HeightRequest="70"
                Margin="0,0,20,22"
                    VerticalOptions="End"
                    Command="{Binding AddProductoCommand}" />

        </StackLayout>
        <!-- LISTA DE PRODUCTOS FIN-->
    </Grid>
</ContentPage>
